<h1>Edit Item</h1>

<form method="post" action='/dashboard/items/<%=@item.id %>'>

  <label for="name_field">Name</label>
  <input type="text" name="name" id='name_field' value="<%=@item.name %>">>

  <label for="description_field">Description</label>
  <input type="text" name="description" id='description_field' value="<%=@item.description %>">

  <label for="quantity_field">Quantity</label>
  <input type="number" name="quantity" id='quantity_field' value="<%=@item.quantity %>">

  <label for="purchase_cost_field">Purchase_cost</label>
  <input type="number" name="purchase_cost" id='purchase_cost_field' value="<%=@item.purchase_cost %>">

  <label for="rrp_field">RRP</label>
  <input type="number" name="rrp" id='rrp_field' value="<%=@item.rrp %>">

  <label for="category">Category</label>
  <select name="category" id=category selected="<%=@item.category%>">
    <option value="Attack">Attack</option>
    <option value="Defence">Defence</option>
    <option value="Boost">Boost</option>
  </select>

  <label for="supplier_id">Supplier</label>
  <select name="supplier_id" id="supplier_id" selected="<%=@item.supplier_id%>">
    <% @suppliers.each do |supplier| %>
    <option value="<%=supplier.id  %>"><%=supplier.name %></option>
    <%end %>
  </select>

  <input type="submit" value="Update Item">

</form>
