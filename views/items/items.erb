
<form action="/dashboard/items/new_item" method="get">
    <input type="submit" value="Add New Item"
         name="Submit" id="frm1_submit" />
</form>

<%@items.each do |item|  %>
  <p>Item: <%=item.name %></p>
  <p>Quantity: <%=item.quantity  %></p>
  <p>Category: <%=item.category  %></p>
  <p>Supplier: <%=item.supplier_id  %></p>

  <p> <a href="/dashboard/items/<%= item.id %>">Show Item</a> </p>

<hr>
<%end  %>
